{
  "name": "chromie",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "main": "dist/src/main.js",
  "scripts": {
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:integration": "cucumber-js tests/integration/features/*.feature --require-module ts-node/register --require tests/integration/step-definitions/*.ts --format node_modules/cucumber-pretty",
    "start": "electron .",
    "prestart": "rm -rf dist && tsc && cp -r src/resources dist/src/resources"
  },
  "dependencies": {
    "electron": "^11.2.0",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@types/cucumber": "^6.0.1",
    "@types/jest": "^26.0.20",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "cucumber-tsflow": "^3.2.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.4.3"
  }
}
